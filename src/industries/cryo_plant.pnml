	[],
	[O2__: max(1,LOAD_TEMP(TEMP_REGISTER_PRODUCTION_AMOUNT)*20/100);N2__: max(1,LOAD_TEMP(TEMP_REGISTER_PRODUCTION_AMOUNT)*70/100);],
	0 // do not run again
)

