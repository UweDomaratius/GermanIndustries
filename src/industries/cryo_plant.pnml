	[initialize_extractive_resources(),
	 STORE_TEMP(max(cryo_plant_func_calc_max_prod(),128),TEMP_REGISTER_MAXIMUM_PRIMARY_PRODUCTION)
	])
{
	randomize_initial_production;
}

