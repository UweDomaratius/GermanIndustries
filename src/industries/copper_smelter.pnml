// 2 Cu2S + 3 O2 -> 2 Cu2O + 2 SO2
// Cu2S + 2Cu2O -> 6 Cu + SO2
// => 3Cu2S -> 6 Cu
// Cu2S 159.16 g/mol, Cu 63.546 => 477,48g -> 381,276g => 79,8%
produce(copper_smelter_produce,
	[CORE: LOAD_TEMP(TEMP_REGISTER_CURRENT_PRODUCTION_AMOUNT);],
	[COPR: LOAD_TEMP(TEMP_REGISTER_CURRENT_PRODUCTION_AMOUNT) > 0 ? max(LOAD_TEMP(TEMP_REGISTER_CURRENT_PRODUCTION_AMOUNT)*79/100,1) : 0;],
	0 // do not run again
)

