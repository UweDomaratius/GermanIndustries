// industry tile and layout definition
//////////////////////////////////////////////////////////////////////////////
item(FEAT_INDUSTRYTILES, recycling_depot_tile, INDUSTRY_TILE_ID_RECYCLING_DEPOT) {
	property {
		substitute:         0;
        land_shape_flags:   0;
        special_flags: bitmask(INDTILE_FLAG_ACCEPT_ALL);
        animation_triggers: bitmask();
	}
	graphics {
		tile_check: recycling_depot_switch_tile_location_check;
		recycling_depot_switch_graphics;
	}
}

tilelayout recycling_depot_tilelayout {
	0, 0: recycling_depot_tile;
    0, 1: recycling_depot_tile;
    1, 0: recycling_depot_tile;
    1, 1: recycling_depot_tile;

}

switch(FEAT_INDUSTRIES, SELF, recycling_depot_switch_location_check_industry_distance,
       [STORE_TEMP(0, TEMP_REGISTER_TOWN_MIN_DISTANCE),
	    STORE_TEMP(24, TEMP_REGISTER_TOWN_MAX_DISTANCE),
	    (is_industry_funded_or_prospected()) || (distance_from_town() && 
	    (industry_distance(INDUSTRY_ID_GLASS_WORKS) >= 32) &&
		(industry_distance(INDUSTRY_ID_PAPER_MILL) >= 32) &&
		(industry_distance(INDUSTRY_ID_SCRAP_YARD) >= 32) && 
	    (industry_distance(INDUSTRY_ID_RECYCLING_DEPOT) >= 16))]) {
	   1: return CB_RESULT_LOCATION_ALLOW;
	   return CB_RESULT_LOCATION_DISALLOW;
}

produce(recycling_depot_produce,
	[],
	[RCYC: LOAD_TEMP(TEMP_REGISTER_CURRENT_PRODUCTION_AMOUNT);],
	0 // do not run again
)

// production scales with population of related city, min 4, max 255 per 256 ticks
switch(FEAT_INDUSTRIES, PARENT, recycling_depot_switch_produce, 
	[ STORE_TEMP(min(max(4,population/42),255), TEMP_REGISTER_CURRENT_PRODUCTION_AMOUNT)	
	]) {
	recycling_depot_produce;
}

if (param_extension_recycling && (param_extension_glass || param_extension_paper)) {
	item(FEAT_INDUSTRIES, recycling_depot, INDUSTRY_ID_RECYCLING_DEPOT) {
		property {
			substitute: 0;
			map_colour: 132;
			life_type: IND_LIFE_TYPE_EXTRACTIVE;
			min_cargo_distr: 1;
			layouts: [recycling_depot_tilelayout];
			spec_flags: bitmask(IND_FLAG_LONG_CARGO_TYPE_LISTS);
			conflicting_ind_types: [];
			random_sound_effects: [];
			name: string(STR_IND_RECYCLING_DEPOT);
			prob_map_gen: 20;
			prob_in_game: 20;
			fund_cost_multiplier: 118;
			remove_cost_multiplier: 0;
			remove_cost_multiplier: 0;
			cargo_types: [produce_cargo("RCYC",0)];
			nearby_station_name: string(STR_STATION, string(STR_TOWN),string(STR_STATION_RECYCLING_DEPOT));
		}
			
		graphics {
		    construction_probability: get_construction_probability;
			produce_cargo_arrival:    empty_produce; 
			produce_256_ticks:        recycling_depot_switch_produce;
			random_prod_change:       return CB_RESULT_IND_PROD_NO_CHANGE;
			location_check:           recycling_depot_switch_location_check_industry_distance;
		}
	}
}
