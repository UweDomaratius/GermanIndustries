    2, 0: limestone_mine_tile_exit_trestle;
    2, 1: limestone_mine_tile_2;
    2, 2: limestone_mine_tile_exit_trestle;
    2, 3: limestone_mine_tile_2;
    2, 4: limestone_mine_tile_2;
}

switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_location_check_industry_distance,
        [count_industries(),
		(is_industry_funded_or_prospected()) || (water_distance > 16) &&
		(param_max_industries_per_type_on_map == 0 || param_max_industries_per_type_on_map > industry_count(INDUSTRY_ID_LIMESTONE_MINE)) &&
		(param_max_industries_on_map == 0 || param_max_industries_on_map > LOAD_TEMP(TEMP_REGISTER_NUMBER_OF_INDUSTRIES)) &&
		// distance to related producers
		(industry_distance(INDUSTRY_ID_EXPLOSIVES_FACTORY) >= param_min_dist_related_industry) &&
		// distance to related consumers
		(industry_distance(INDUSTRY_ID_CEMENT_PLANT) >= param_min_dist_related_industry) &&
		(industry_distance(INDUSTRY_ID_LIME_KILN) >= param_min_dist_related_industry) &&
		(industry_distance(INDUSTRY_ID_PAINT_FACTORY) >= param_min_dist_related_industry) && 
		(industry_distance(INDUSTRY_ID_SODA_PLANT) >= param_min_dist_related_industry) &&
		// distance between instances of same industry
		(industry_distance(INDUSTRY_ID_LIMESTONE_MINE) >= param_min_dist_same_industry)
		]) 
{ 
	1: return CB_RESULT_LOCATION_ALLOW;
	return CB_RESULT_LOCATION_DISALLOW;
}


switch(FEAT_INDUSTRIES, SELF, limestone_mine_func_calc_max_prod, 
	65535) {
	return;
}

// if nothing has been transported at all, do not change production (industry might just not be serviced)
switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_prod_change, 
	[STORE_TEMP(transported_last_month_pct("LIME"), TEMP_REGISTER_TRANSPORTED_LAST_MONTH_PCT_CARGO0),
	 STORE_TEMP(limestone_mine_func_calc_max_prod(),TEMP_REGISTER_MAXIMUM_PRODUCTION),
	 LOAD_PERM(PERM_REGISTER_RESOURCES) > 0])
{
	1: change_production; // use default rules to adapt production
	return CB_RESULT_IND_PROD_CLOSE; // resources are depleted - close
}

// randomize production at build time based on random bits: 96t min, 152t max
switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_prod_change_build,
	[initialize_extractive_resources(),
	STORE_TEMP(max(limestone_mine_func_calc_max_prod(),128),TEMP_REGISTER_MAXIMUM_PRODUCTION)	 
	])
{
	randomize_initial_production;
}

produce(limestone_mine_produce,
	[],
	[LIME: LOAD_TEMP(TEMP_REGISTER_PRODUCTION_AMOUNT);],
	0 // do not run again
)

////////////////////////////////////////////////////////////////////////////////
// calculate how much to produce, based on remaining reserves, current production level etc.
////////////////////////////////////////////////////////////////////////////////
switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_produce,
	[init_primary_production(),
	 update_permanent_storage_production_values(),
	 reduce_primary_resources()
	 ])
{
	limestone_mine_produce;
}

produce(limestone_mine_produce_ext_production_boost,
	[BOOM: LOAD_TEMP(TEMP_REGISTER_PRODUCTION_RAW0);],
	[LIME: LOAD_TEMP(TEMP_REGISTER_PRODUCTION_AMOUNT);],
	0 // do not run again
)

switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_produce_ext_production_boost,
	[init_primary_production(),
	 STORE_TEMP(incoming_cargo_waiting("BOOM"), TEMP_REGISTER_INCOMING_OPT_CARGO_WAITING0),
	 
	 limit_production_optional_cargo(1),

	 STORE_TEMP(min(LOAD_TEMP(TEMP_REGISTER_INCOMING_OPT_CARGO_WAITING0), LOAD_TEMP(TEMP_REGISTER_PRODUCTION_AMOUNT) / 10), TEMP_REGISTER_PRODUCTION_RAW0),
	 
	 update_permanent_storage_production_values(),
	 reduce_primary_resources()
	]) {
	limestone_mine_produce_ext_production_boost;
}

////////////////////////////////////////////////////////////////////////////////
// build the industry window text here
////////////////////////////////////////////////////////////////////////////////
switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_extra_text, 
	[STORE_TEMP(limestone_mine_func_calc_max_prod(),TEMP_REGISTER_MAXIMUM_PRODUCTION)])
{
	 create_extractive_industry_text;
}

switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_extra_text_ext_production_boost, 
	[STORE_TEMP(limestone_mine_func_calc_max_prod(),TEMP_REGISTER_MAXIMUM_PRODUCTION)])
{
	 create_extractive_industry_text_optional_cargo;
}

switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_extra_text_fund, 
    [STORE_TEMP(string(STR_1800), TEMP_REGISTER_EXTRA_TEXT_ARG0),
	current_year]) {
	1800..500000: return string(STR_EMPTY);
	return string(STR_INDUSTRY_NOT_AVAILABLE_BEFORE);
}

// year < 1800: no creation
switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_check_availability, current_year) {
	0..1799: return CB_RESULT_IND_NO_CONSTRUCTION;               // no limestone mines before 1800
	get_construction_probability;
}

switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_random_prod_change, 
	[STORE_TEMP(last_month_transported("LIME"),TEMP_REGISTER_TRANSPORTED_LAST_MONTH_PCT_CARGO0)]) {
	extractive_industry_switch_random_prod_change;
}

switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_cargo_subtype, getbits(extra_callback_info2, 16, 8)) {
	BOOM: switch_cargo_subtype_white;
	return 0x3800 + string(STR_EMPTY);
}

produce(limestone_mine_produce_cap_stockpile,
	[BOOM: incoming_cargo_waiting("BOOM") > 60000 ? incoming_cargo_waiting("BOOM") - 60000 : 0;
	 ],
	[],
	0 // do not run again
)

switch(FEAT_INDUSTRIES, SELF, limestone_mine_switch_stockpile_check, param_stockpile_cap)
{
