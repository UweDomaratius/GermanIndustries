item(FEAT_INDUSTRYTILES, limestone_mine_tile_animated_headgear, INDUSTRY_TILE_ID_LIMESTONE_MINE_1) {
	if (!param_extension_production_boost) {
		property {
			substitute:         0;
			land_shape_flags:   0;
			accepted_cargos: [];
			animation_info: [ANIMATION_LOOPING, 81];
			animation_speed: 1;
			animation_triggers: bitmask(ANIM_TRIGGER_INDTILE_TILE_LOOP);
		}
	}
	if (param_extension_production_boost) {
		property {
			substitute:         0;
			land_shape_flags:   0;
			accepted_cargos: [[BOOM,8]];
			animation_info: [ANIMATION_LOOPING, 81];
			animation_speed: 1;
			animation_triggers: bitmask(ANIM_TRIGGER_INDTILE_TILE_LOOP);
		}
	}
	graphics {
		tile_check: limestone_mine_switch_tile_location_check;
		anim_next_frame: return ((animation_frame == 80) ? CB_RESULT_STOP_ANIMATION : CB_RESULT_NEXT_FRAME);
		anim_control: 0;
		cargo_amount_accept: limestone_mine_switch_tile_cargo_acceptance;
		limestone_mine_switch_graphics;
	}
}
