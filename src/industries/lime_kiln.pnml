item(FEAT_INDUSTRYTILES, lime_kiln_tile, INDUSTRY_TILE_ID_LIME_KILN) {
	property {
		substitute:         0;
		land_shape_flags:   0;
		special_flags: bitmask(INDTILE_FLAG_ACCEPT_ALL);
		animation_info: [ANIMATION_LOOPING, 7];
		animation_speed: 3;
		animation_triggers: bitmask();
	}
	graphics {
		tile_check: lime_kiln_switch_tile_location_check;
		lime_kiln_switch_graphics;
	}
}

