item(FEAT_INDUSTRYTILES, textile_mill_tile, INDUSTRY_TILE_ID_TEXTILE_MILL) {
	if (!param_extension_painting_industries) {
		property {
			substitute:         0;
			land_shape_flags:   0;
			accepted_cargos: [[PLAS,8],[WOOL,8]];
			animation_info: [ANIMATION_LOOPING, 7];
			animation_speed: 3;
			animation_triggers: bitmask(ANIM_TRIGGER_INDTILE_CONSTRUCTION_STATE);
		}
	}
	if (param_extension_painting_industries) {
		property {
			substitute:         0;
			land_shape_flags:   0;
			accepted_cargos: [[PLAS,8],[WOOL,8],[COAT,8]];
			animation_info: [ANIMATION_LOOPING, 7];
			animation_speed: 3;
			animation_triggers: bitmask(ANIM_TRIGGER_INDTILE_CONSTRUCTION_STATE);
		}
	}
	graphics {
		tile_check: textile_mill_switch_tile_location_check;
		cargo_amount_accept: textile_mill_switch_tile_cargo_acceptance;
		textile_mill_switch_graphics;
	}
}

