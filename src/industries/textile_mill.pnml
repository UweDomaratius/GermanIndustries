switch(FEAT_INDUSTRIES, SELF, textile_mill_switch_location_check_industry_distance,
       [STORE_TEMP(0, TEMP_REGISTER_TOWN_MIN_DISTANCE),
	    STORE_TEMP(16, TEMP_REGISTER_TOWN_MAX_DISTANCE),
		count_industries(),
	    (is_industry_funded_or_prospected()) || (distance_from_town() && 
		(param_max_industries_per_type_on_map == 0 || param_max_industries_per_type_on_map > industry_count(INDUSTRY_ID_TEXTILE_MILL)) &&
		(param_max_industries_on_map == 0 || param_max_industries_on_map > LOAD_TEMP(TEMP_REGISTER_NUMBER_OF_INDUSTRIES)) &&
		// distance to related producers
	    (industry_distance(INDUSTRY_ID_ANIMAL_FARM) >= param_min_dist_related_industry) && 
		(industry_distance(INDUSTRY_ID_FARM) >= param_min_dist_related_industry) && 
		// distance to related consumers
		(industry_distance(INDUSTRY_ID_CLOTHING_PLANT) >= param_min_dist_related_industry) && 
		(industry_distance(INDUSTRY_ID_FURNITURE_FACTORY) >= param_min_dist_related_industry) &&
		(industry_distance(INDUSTRY_ID_VEHICLE_PARTS_PLANT) >= param_min_dist_related_industry) &&
		// distance between instances of same industry
	    (industry_distance(INDUSTRY_ID_TEXTILE_MILL) >= param_min_dist_same_industry)		
		)]) {
	   1: return CB_RESULT_LOCATION_ALLOW;
	   return CB_RESULT_LOCATION_DISALLOW;
}

produce(textile_mill_produce,
	[WOOL: LOAD_TEMP(TEMP_REGISTER_PRODUCTION_RAW0);
	 PLAS: LOAD_TEMP(TEMP_REGISTER_PRODUCTION_RAW1);],
	[TEXT: LOAD_TEMP(TEMP_REGISTER_PRODUCT_1);
	],
	0 // do not run again
)

switch(FEAT_INDUSTRIES, SELF, textile_mill_switch_produce, 
	[STORE_TEMP(incoming_cargo_waiting("WOOL"),TEMP_REGISTER_INCOMING_CARGO_WAITING0),
	 	 
	 calculate_raw_material_usage(),
	 calculate_total_production(),
	 	 
	 STORE_TEMP(incoming_cargo_waiting("PLAS"),TEMP_REGISTER_INCOMING_OPT_CARGO_WAITING1),
	 limit_production_optional_cargo(1),
	 update_permanent_storage_production_values(),
	 STORE_TEMP(min(LOAD_TEMP(TEMP_REGISTER_INCOMING_OPT_CARGO_WAITING1), LOAD_TEMP(TEMP_REGISTER_PRODUCTION_AMOUNT) / 5), TEMP_REGISTER_PRODUCTION_RAW1),
	 STORE_TEMP(percentage_of_production(LOAD_TEMP(TEMP_REGISTER_PRODUCTIVITY_SCALE)), TEMP_REGISTER_PRODUCT_1),
	 store_debug_production_data()
	 ])
	{
	textile_mill_produce;	
}

produce(textile_mill_produce_ext_painting_industries,
	[WOOL: LOAD_TEMP(TEMP_REGISTER_PRODUCTION_RAW0);
	 PLAS: LOAD_TEMP(TEMP_REGISTER_PRODUCTION_RAW1);
	 COAT: LOAD_TEMP(TEMP_REGISTER_PRODUCTION_RAW2);
	 ],
	[TEXT: LOAD_TEMP(TEMP_REGISTER_PRODUCT_1);
	],
	0 // do not run again
)

switch(FEAT_INDUSTRIES, SELF, textile_mill_switch_produce_ext_painting_industries, 
	[STORE_TEMP(incoming_cargo_waiting("WOOL"),TEMP_REGISTER_INCOMING_CARGO_WAITING0),
	 
	 calculate_raw_material_usage(),
	 calculate_total_production(),
	 
	 STORE_TEMP(incoming_cargo_waiting("PLAS"),TEMP_REGISTER_INCOMING_OPT_CARGO_WAITING1),
	 STORE_TEMP(incoming_cargo_waiting("COAT"),TEMP_REGISTER_INCOMING_OPT_CARGO_WAITING2),
	 limit_production_optional_cargo(2),
	 update_permanent_storage_production_values(),
	 // use 5% of production amount as usage of optional stuff 
	 STORE_TEMP(min(LOAD_TEMP(TEMP_REGISTER_INCOMING_OPT_CARGO_WAITING1), LOAD_TEMP(TEMP_REGISTER_PRODUCTION_AMOUNT) / 5), TEMP_REGISTER_PRODUCTION_RAW1),
	 STORE_TEMP(min(LOAD_TEMP(TEMP_REGISTER_INCOMING_OPT_CARGO_WAITING2), LOAD_TEMP(TEMP_REGISTER_PRODUCTION_AMOUNT) / 5), TEMP_REGISTER_PRODUCTION_RAW2),
	 STORE_TEMP(percentage_of_production(LOAD_TEMP(TEMP_REGISTER_PRODUCTIVITY_SCALE)), TEMP_REGISTER_PRODUCT_1),
	 store_debug_production_data()
	 ])
	{
	textile_mill_produce_ext_painting_industries;	
}

switch(FEAT_INDUSTRIES, SELF, textile_mill_switch_cargo_subtype, getbits(extra_callback_info2, 16, 8)) {
	WOOL: switch_cargo_subtype;
	PLAS: switch_cargo_subtype_white;
	return 0x3800 + string(STR_EMPTY);
}

switch(FEAT_INDUSTRIES, SELF, textile_mill_switch_cargo_subtype_ext_painting_industries, getbits(extra_callback_info2, 16, 8)) {
	WOOL: switch_cargo_subtype;
	PLAS: switch_cargo_subtype_white;
	COAT: switch_cargo_subtype_white;
	return 0x3800 + string(STR_EMPTY);
}

switch(FEAT_INDUSTRIES, SELF, textile_mill_check_production,
	[this_month_production("TEXT") != 0 || last_month_production("TEXT") != 0 || 
	incoming_cargo_waiting("PLAS") != 0 || incoming_cargo_waiting("WOOL") ||
	this_month_transported("TEXT") != 0 || last_month_transported("TEXT") != 0
	])
{
}

switch(FEAT_INDUSTRIES, SELF, textile_mill_switch_update_last_served_date,
	[update_last_served_date(),
	 STORE_PERM(textile_mill_check_production(), PERM_REGISTER_LAST_SERVED11)
	])
{
	check_secondary_industry_closure();
}

switch(FEAT_INDUSTRIES, SELF, textile_mill_switch_update_last_served_date_ext_painting_industries,
	[update_last_served_date(),
	 STORE_PERM(textile_mill_check_production() || incoming_cargo_waiting("COAT") != 0, PERM_REGISTER_LAST_SERVED11)
	])
{
	check_secondary_industry_closure();
}

produce(textile_mill_produce_cap_stockpile,
	[PLAS: incoming_cargo_waiting("PLAS") > 60000 ? incoming_cargo_waiting("PLAS") - 60000 : 0;
	 WOOL: incoming_cargo_waiting("WOOL") > 60000 ? incoming_cargo_waiting("WOOL") - 60000 : 0;
	 ],
	[],
	0 // do not run again
)

switch(FEAT_INDUSTRIES, SELF, textile_mill_switch_stockpile_check, param_stockpile_cap)
{
	1: empty_produce;
	textile_mill_produce_cap_stockpile;
}

produce(textile_mill_produce_cap_stockpile_ext_painting_industries,
	[PLAS: incoming_cargo_waiting("PLAS") > 60000 ? incoming_cargo_waiting("PLAS") - 60000 : 0;
	 WOOL: incoming_cargo_waiting("WOOL") > 60000 ? incoming_cargo_waiting("WOOL") - 60000 : 0;
	 COAT: incoming_cargo_waiting("COAT") > 60000 ? incoming_cargo_waiting("COAT") - 60000 : 0;
