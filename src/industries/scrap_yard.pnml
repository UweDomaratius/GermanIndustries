item(FEAT_INDUSTRYTILES, scrap_yard_tile, INDUSTRY_TILE_ID_SCRAP_YARD) {
	property {
		substitute:         0;
        land_shape_flags:   0;
        special_flags: bitmask(INDTILE_FLAG_ACCEPT_ALL);
        animation_triggers: bitmask();
	}
	graphics {
		tile_check: scrap_yard_switch_tile_location_check;
		scrap_yard_switch_graphics;
	}
}

