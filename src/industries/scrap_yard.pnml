switch(FEAT_INDUSTRIES, SELF, scrap_yard_switch_location_check_industry_distance,
       [STORE_TEMP(0, TEMP_REGISTER_TOWN_MIN_DISTANCE),
	    STORE_TEMP(24, TEMP_REGISTER_TOWN_MAX_DISTANCE),
		count_industries(),
	    (is_industry_funded_or_prospected()) || (distance_from_town() && 
		(param_max_industries_per_type_on_map == 0 || param_max_industries_per_type_on_map > industry_count(INDUSTRY_ID_SCRAP_YARD)) &&
		(param_max_industries_on_map == 0 || param_max_industries_on_map > LOAD_TEMP(TEMP_REGISTER_NUMBER_OF_INDUSTRIES)) &&
	    // distance to related producers
		// distance to related consumers
		(industry_distance(INDUSTRY_ID_ALUMINIUM_PLANT) >= param_min_dist_related_industry) &&
		(industry_distance(INDUSTRY_ID_COPPER_SMELTER) >= param_min_dist_related_industry) &&
		(industry_distance(INDUSTRY_ID_INTEGRATED_STEEL_MILL) >= param_min_dist_related_industry) && 
		// distance between instances of same industry
		(industry_distance(INDUSTRY_ID_RECYCLING_DEPOT) >= param_min_dist_related_industry) &&
	    (industry_distance(INDUSTRY_ID_SCRAP_YARD) >= param_min_dist_same_industry)
		
		)]) {
	   1: return CB_RESULT_LOCATION_ALLOW;
	   return CB_RESULT_LOCATION_DISALLOW;
}

produce(scrap_yard_produce,
	[],
	[SCMT: LOAD_TEMP(TEMP_REGISTER_PRODUCTION_AMOUNT);],
	0 // do not run again
)

// production scales with population of related city, min 4, max 255 per 256 ticks
switch(FEAT_INDUSTRIES, PARENT, scrap_yard_switch_produce, 
	[ STORE_TEMP(min(max(4,population/42),255), TEMP_REGISTER_PRODUCTION_AMOUNT)	
	]) {
	scrap_yard_produce;
}

