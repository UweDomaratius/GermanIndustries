			spec_flags: bitmask(IND_FLAG_LONG_CARGO_TYPE_LISTS);
			conflicting_ind_types: [];
			random_sound_effects: [];
			name: string(STR_IND_SCRAP_YARD);
			prob_map_gen: 14;
			prob_in_game: 3;
			fund_cost_multiplier: 101;
			remove_cost_multiplier: 0;
			remove_cost_multiplier: 0;
			cargo_types: [produce_cargo("SCMT",0)];
			nearby_station_name: string(STR_STATION, string(STR_TOWN),string(STR_STATION_SCRAP_YARD));
		}
			
		graphics {
		    construction_probability: get_construction_probability;
			produce_cargo_arrival:    empty_produce; 
			produce_256_ticks:        scrap_yard_switch_produce;
			random_prod_change:       return CB_RESULT_IND_PROD_NO_CHANGE;
			location_check:           scrap_yard_switch_location_check_industry_distance;
			extra_text_industry:      industry_switch_extra_text_scale_with_city_size;
			build_prod_change:        initialize_last_served_date;
		}
	}
