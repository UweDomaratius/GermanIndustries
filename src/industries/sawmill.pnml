// industry tile and layout definition
//////////////////////////////////////////////////////////////////////////////
item(FEAT_INDUSTRYTILES, sawmill_tile_1, INDUSTRY_TILE_ID_SAWMILL_1) {
	property {
		substitute:         0;
		land_shape_flags:   0;
		accepted_cargos: [[WOOD,8]];
		animation_triggers: bitmask();
	}
	graphics {
		tile_check: sawmill_switch_tile_location_check;
		cargo_amount_accept: sawmill_switch_tile_cargo_acceptance;
		sawmill_switch_graphics;
	}
}

tilelayout sawmill_tilelayout_1 {
	0, 0: sawmill_tile_1;
    0, 1: sawmill_tile_1;
    0, 2: sawmill_tile_1;
    1, 0: sawmill_tile_1;
    1, 1: sawmill_tile_1;
    1, 2: sawmill_tile_1;
    2, 0: sawmill_tile_1;
    2, 1: sawmill_tile_1;

}

switch(FEAT_INDUSTRIES, SELF, sawmill_switch_location_check_industry_distance,
       [STORE_TEMP(32, TEMP_REGISTER_TOWN_MIN_DISTANCE),
	    STORE_TEMP(64, TEMP_REGISTER_TOWN_MAX_DISTANCE),
		count_industries(),
	    (is_industry_funded_or_prospected()) || (distance_from_town() && 
		(param_max_industries_per_type_on_map == 0 || param_max_industries_per_type_on_map > industry_count(INDUSTRY_ID_SAWMILL)) &&
		(param_max_industries_on_map == 0 || param_max_industries_on_map > LOAD_TEMP(TEMP_REGISTER_NUMBER_OF_INDUSTRIES)) &&
		// distance to related producers
		(industry_distance(INDUSTRY_ID_FOREST) >= param_min_dist_related_industry) &&
		// distance to related consumers		
	    (industry_distance(INDUSTRY_ID_BIOREFINERY) >= param_min_dist_related_industry) &&
		(industry_distance(INDUSTRY_ID_BUILDERS_YARD) >= param_min_dist_related_industry) && 
	    (industry_distance(INDUSTRY_ID_FURNITURE_FACTORY) >= param_min_dist_related_industry) &&
		(industry_distance(INDUSTRY_ID_POWER_PLANT) >= param_min_dist_related_industry) &&
		(industry_distance(INDUSTRY_ID_STEAMREFORMER) >= param_min_dist_related_industry) &&		
		// distance between instances of same industry
	    (industry_distance(INDUSTRY_ID_SAWMILL) >= param_min_dist_same_industry)		
		)]) {
	   1: return CB_RESULT_LOCATION_ALLOW;
	   return CB_RESULT_LOCATION_DISALLOW;
}

